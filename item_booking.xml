<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/bookingIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking #12345678"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slotIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Slot: A1" />

        <TextView
            android:id="@+id/vehicleIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Vehicle: ABC123" />

        <TextView
            android:id="@+id/bookingTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Booked on: 13-08-2025 14:30" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status: Active"
            android:textStyle="bold" />

        <Button
            android:id="@+id/driverAssistanceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Need Driver Assistance" />

    </LinearLayout>
</androidx.cardview.widget.CardView>